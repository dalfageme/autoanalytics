{
  "rootDir": "..",
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest",
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "testMatch": [ "<rootDir>**/tests/**/?(*.)(test).js" ],
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "moduleDirectories": ["node_modules", "src"]

}
